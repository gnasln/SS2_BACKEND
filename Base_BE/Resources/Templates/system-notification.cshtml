@model dynamic
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Spring Boot Email Template with Razor</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
            href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
            rel="stylesheet"
    />
    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: "Open Sans", sans-serif;
        }
        .main {
            place-items: center;
            width: 100%;
            background-color: #e8e8e8;
            padding: 30px 0;
        }
        .container {
            width: 30vw;
            height: auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            position: relative;
            margin: 0 auto;
        }

        .container header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .container header img {
            width: 150px;
        }
        .container .link {
            border: 2px solid #336699;
            border-radius: 5px;
            text-decoration: none;
            padding: 10px;
            color: #336699;
            transition: all 0.3s;
            font-size: 0.8rem;
            font-weight: 600;
            cursor: pointer;
        }
        .container .link:hover {
            background: #336699;
            color: #fff;
        }
        .container .title {
            font-size: 2rem;
            font-weight: 700;
            margin: 20px 0;
            text-align: center;
        }
        .container .content {
            margin: 20px 0;
            font-size: 16px;
        }
        .container .content .username {
            font-weight: 600;
            font-size: 1.2rem;
        }
        .container .content .password-value {
            background-color: #e8e8e8;
            margin: 20px 0;
            text-align: center;
            padding: 10px;
            font-size: 1rem;
            font-weight: 700;
        }
        .container .footer {
            text-align: center;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding-bottom: 20px;
        }
        .container .footer img {
            width: 100px;
            margin-bottom: 20px;
        }
        .container .footer p {
            font-weight: 600;
        }
        table {
            width: -webkit-fill-available;
        }
        table th, table td {
            border: 1px solid #c5c5c5;
            border-collapse: collapse;
            padding: 5px 10px 5px 10px;
            word-break: break-word;
        }
        table th {
            text-align: right;
        }
        table td {
            text-align: left;
        }
    </style>
</head>
<body>
<div class="main">
    <div class="container">
        <p class="title">Thông báo từ hệ thống bầu cử điện tử</p>
        <div class="content">
            <p>
                Xin chào: <span class="username">@Model.Name</span>
            </p>
            <div class="content">@Model.Content</div>
            @if (Model.VoteName != null)
            {
            <div class="content">Thông tin cuộc bầu cử:</div>
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <th>Tên cuộc bầu cử</th>
                    <td>@Model.VoteName</td>
                </tr>
                <tr>
                    <th>Các ứng viên tham gia</th>
                    <td>@Model.CandidateNames</td>
                </tr>
                <tr>
                    <th>Ngày bắt đầu cuộc bầu cử</th>
                    <td>@Model.StartDate</td>
                </tr>
                <tr>
                    <th>Ngày kết thúc cuộc bầu cử</th>
                    <td>@Model.ExpiredDate</td>
                </tr>
            </table>
            }
        </div>
        <div class="footer" style="display: block">
            <img
                    src="https://cdn.haitrieu.com/wp-content/uploads/2021/10/Logo-Hoc-Vien-Ky-Thuat-Mat-Ma-ACTVN-1.png"
                    alt="Học viện Kỹ thuật Mật mã"
            />
            <p>Học viện Kỹ thuật Mật mã</p>
        </div>
    </div>
</div>
</body>
</html>
