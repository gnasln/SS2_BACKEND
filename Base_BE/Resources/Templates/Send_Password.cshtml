@using ServiceStack.Html
@model dynamic
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Thông báo tạo tài khoản</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
            href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800&display=swap"
            rel="stylesheet"
    />
    <style type="text/css">
    
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: "Open Sans", sans-serif;
        }
    
        .main {
            place-items: center;
            width: 100%;
            background-color: #e8e8e8;
            padding: 30px 0;
        }
    
        .container {
            width: 30vw;
            /*height: 75vh;*/
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            position: relative;
            margin: 0 auto;
        }
    
        .container header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
    
        .container header img {
            width: 150px;
        }
    
        .container .link {
            border: 2px solid #336699;
            border-radius: 5px;
            text-decoration: none;
            padding: 10px;
            color: #336699;
            transition: all 0.3s;
            font-size: 0.8rem;
            font-weight: 600;
            cursor: pointer;
        }
    
        .container .link:hover {
            background: #336699;
            color: #fff;
        }
    
        .container .title {
            font-size: 2rem;
            font-weight: 700;
            margin: 20px 0;
            text-align: center;
        }
    
        .container .content p {
            margin: 20px 0;
        }
    
        .container .content .username {
            font-weight: 600;
            font-size: 1.2rem;
        }
    
        .container .content .password-value {
            background-color: #e8e8e8;
            margin: 20px 0;
            text-align: center;
            padding: 10px;
            font-size: 1rem;
            font-weight: 700;
        }
    
        .container .footer {
            text-align: center;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }
    
        .container .footer img {
            width: 100px;
            margin-bottom: 20px;
        }
    
        .container .footer p {
            font-weight: 600;
        }
    
    </style>
</head>
<body>
<div class="main">
    <div class="container">
        <p class="title">Thông báo tạo tài khoản</p>
        <div class="content">
            <p>
                Xin chào: <span class="username">@Model.Name</span>
            </p>
            <p>
                Tên đăng nhập của bạn là: <span class="username">@Model.UserName</span>
            </p>
            <p>Dưới đây là mật khẩu của bạn, vui lòng đăng nhập để đổi mật khẩu</p>
            <div class="password-value">@Model.Password</div>
            <p>Hệ thống sử dụng khóa bí mật để thực hiện quy trình bảo mật cho các thông tin bầu cử của bạn. Hãy lưu lại để sử dụng cho những lần bầu cử</p>
            <i style="color: red">Lưu ý: Khóa bí mật không được để để bị đánh mất và không thể lấy lại được.</i>
            <p>Khóa bí mật của bạn là</p>
            <div class="password-value">@Model.PrivateKey</div>
        </div>
        <div class="footer" style="display: block">
            <img
                src="https://cdn.haitrieu.com/wp-content/uploads/2021/10/Logo-Hoc-Vien-Ky-Thuat-Mat-Ma-ACTVN-1.png"
                alt="Học viện Kỹ thuật Mật mã"
            />
            <p>Học viện Kỹ thuật Mật mã</p>
        </div>
    </div>
</div>
</body>
</html>
